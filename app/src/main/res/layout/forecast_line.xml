<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <TextView
                android:id="@+id/tvForecastDayTime"
                android:text="DAY Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
        />
        <ImageView
                android:id="@+id/ivWeatherImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
        />
        <TextView
                android:id="@+id/tvTemperature"
                android:text="N/A"
                android:textSize="12pt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/ivWeatherImage"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/ivWeatherImage"
                android:layout_marginTop="9dp"
                android:textAlignment="center"
        />
        <TextView
                android:id="@+id/tvPressure"
                android:text="Pressure: N/A"
                android:textSize="5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ivWeatherImage"
        />
        <TextView
                android:id="@+id/tvVisibility"
                android:text="Visibility: N/A"
                android:textSize="5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPressure"
                android:layout_alignParentEnd="true"
        />
        <TextView
                android:id="@+id/tvWeatherPhenomena"
                android:text="Phenomena: N/A"
                android:textSize="5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvForecastDayTime"
                android:layout_alignParentStart="true"
        />
        <TextView
                android:id="@+id/tvPrecipitation"
                android:text="Precipitation: N/A"
                android:textSize="5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWeatherPhenomena"
                android:layout_alignParentStart="true"
        />
        <TextView
                android:id="@+id/tvHumidity"
                android:text="Humidity: N/A"
                android:textSize="5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPrecipitation"
                android:layout_alignParentStart="true"
        />
        <TextView
                android:id="@+id/tvUVIndex"
                android:text="UV Index: N/A"
                android:textSize="5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHumidity"
                android:layout_alignParentStart="true"
        />
    </RelativeLayout>
</LinearLayout>