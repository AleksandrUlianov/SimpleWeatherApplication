<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <Switch
            android:text="Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/switchTUnits"/>
    <Switch
            android:text="Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/switchMUnits"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
                android:text="1 day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbPeriodDays1" android:layout_weight="1"/>
        <RadioButton
                android:text="3 days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbPeriodDays3" android:layout_weight="1"/>
        <RadioButton
                android:text="6 days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbPeriodDays6" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>