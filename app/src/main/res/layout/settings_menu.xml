<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <Switch
            android:text="Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/switchTUnits"/>
    <Switch
            android:text="Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/switchMUnits"/>
    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
                android:id="@+id/rbPeriodDays1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 day"/>
        <RadioButton
                android:id="@+id/rbPeriodDays3"
                android:text="3 days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <RadioButton
                android:id="@+id/rbPeriodDays6"
                android:text="6 days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RadioGroup>
</LinearLayout>